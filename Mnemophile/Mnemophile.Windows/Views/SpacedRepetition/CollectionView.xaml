<catel:UserControl x:Class="Mnemophile.Windows.Views.SpacedRepetition.CollectionView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:spacedRepetition="clr-namespace:Mnemophile.Windows.Views.SpacedRepetition">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    
    <Label Content="Collection view"
           Style="{DynamicResource TitleStyle}"
           Grid.Row="0" />
    
    <spacedRepetition:CardAnswerButtonsView
      DataContext="{Binding Gradings, Mode=OneWay}"
      Grid.Row="1" />
    
  </Grid>
</catel:UserControl>

