<catel:UserControl x:Class="Sidekick.Windows.Views.SpacedRepetition.CollectionDataGridView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:Sidekick.Windows.Views.SpacedRepetition"
                   xmlns:catel="http://catel.codeplex.com"
                   mc:Ignorable="d"
                   d:DesignHeight="300" d:DesignWidth="300">
  <Grid>
    <DataGrid ItemsSource="{Binding FilteredCollection}">
      <DataGrid.Columns>
        <DataGridTextColumn Binding="{Binding Data}"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</catel:UserControl>
